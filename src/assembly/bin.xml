<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${project.version}</id>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>org.jeyzer:jeyzer-recorder</include>
				<include>org.jeyzer:jeyzer-publish</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>org.jeyzer:jeyzer-recorder</exclude>
				<exclude>org.jeyzer:jeyzer-publish</exclude>
			</excludes>
		</dependencySet>
	</dependencySets> 
	<fileSets>
		<fileSet>
			<directory>src/main/scripts/bin</directory>
			<filtered>true</filtered>
			<includes>
				<include>*.bat</include>
				<include>*.sh</include>
			</includes>
			<fileMode>774</fileMode>
			<outputDirectory>/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/config/profiles</directory>
			<outputDirectory>config/profiles</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/config/agent</directory>
			<outputDirectory>config/agent</outputDirectory>
			<excludes>
				<exclude>*.installer.properties</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/config/security</directory>
			<outputDirectory>config/security</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/config/scaling-template</directory>
			<outputDirectory>config/scaling-template</outputDirectory>
		</fileSet>
		
	</fileSets>
	<files>
		<file>
			<source>${basedir}/src/main/config/logback.xml</source>
			<outputDirectory>config</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/doc/README.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/doc/README-AGENT.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/doc/README-AGENT-SCALING.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/LICENSE.txt</source>
			<outputDirectory>/licenses</outputDirectory>
		</file>
		<file>
			<source>${basedir}/THIRD-PARTY.txt</source>
			<outputDirectory>/licenses</outputDirectory>
		</file>
		<!--  Fill the scaling template directory with standard files -->
		<file>
			<source>${basedir}/src/main/config/logback.xml</source>
			<outputDirectory>config/scaling-template/jeyzer-rec-configs/log</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/config/profiles/standard/standard_generation.xml</source>
			<outputDirectory>config/scaling-template/jeyzer-rec-configs/profiles/standard</outputDirectory>
		</file>
		<file>
			<source>${basedir}/src/main/config/profiles/standard/standard_advanced_mx.xml</source>
			<outputDirectory>config/scaling-template/jeyzer-rec-configs/profiles/standard</outputDirectory>
		</file>
	</files>
</assembly>