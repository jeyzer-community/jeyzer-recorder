<?xml version="1.0" encoding="UTF-8"?>

<mx_advanced>

	<!-- 1 - Memory info exposed by JMX -->
	<!-- Provided by java.lang.management.MemoryMXBean -->
	<memory>
		<object_pending_finalization_count/>
		<heap>
			<usage>
				<used/>
				<max/>
				<committed/>
				<init/>
			</usage>
		</heap>
		<non_heap>
			<usage>
				<used/>
				<max/> <!-- Can be NA -->
				<committed/>
				<init/>
			</usage>
		</non_heap>	
	</memory>

